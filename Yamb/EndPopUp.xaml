<Window x:Class="Yamb.EndPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yamb"
        mc:Ignorable="d"
        Title="EndPopUp" Height="400" Width="400" Loaded="Window_Loaded">
    <Grid Background="LightGray" Margin="10" Width="350" Height="150">
        <Border CornerRadius="10" Background="White" BorderBrush="Black" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Name="ScoreText" FontSize="20" HorizontalAlignment="Center" />
                <Button Name="RestartButton" Content="Restart" Width="100" Height="30" Click="RestartButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
